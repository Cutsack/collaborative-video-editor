# Collaborative Video Editor - Environment Variables Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Collaborative Video Editor"
DEBUG=false
API_V1_STR="/api/v1"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/video_editor"

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# JWT secret key for signing tokens (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY="your-super-secret-jwt-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# MINIO/S3 STORAGE (Development)
# =============================================================================
# MinIO credentials for local development
MINIO_ROOT_USER="minioadmin"
MINIO_ROOT_PASSWORD="minioadmin"
MINIO_ENDPOINT="localhost:9000"
MINIO_SECURE=false

# =============================================================================
# AWS S3 CONFIGURATION (Production)
# =============================================================================
# AWS credentials for production S3 storage
# Leave empty for development (uses MinIO instead)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_S3_REGION="us-east-1"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection URL for WebSocket session management
REDIS_URL="redis://localhost:6379"

# =============================================================================
# MEDIA UPLOAD SETTINGS
# =============================================================================
# Maximum file size for uploads
MAX_FILE_SIZE="100MB"

# Allowed file formats (comma-separated)
ALLOWED_VIDEO_FORMATS="mp4,avi,mov,wmv,flv,webm"
ALLOWED_AUDIO_FORMATS="mp3,wav,aac,ogg,flac"
ALLOWED_IMAGE_FORMATS="jpg,jpeg,png,gif,bmp"

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (Vite)
# =============================================================================
# These are used by the React frontend application
VITE_API_URL="http://localhost:8000"
VITE_WS_URL="ws://localhost:8000"

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# These variables are used by docker-compose.yml for service configuration
# You can override these values in your .env file if needed

# PostgreSQL settings
POSTGRES_DB="video_editor"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"

# MinIO settings (for docker-compose)
MINIO_CONSOLE_ADDRESS=":9001"
